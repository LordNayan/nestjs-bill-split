{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../src",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@common/(.*)$": "<rootDir>/common/$1",
    "^@database/(.*)$": "<rootDir>/database/$1",
    "^@loan/(.*)$": "<rootDir>/loan/$1",
    "^@user/(.*)$": "<rootDir>/user/$1",
    "^@src/(.*)$": "<rootDir>/$1"
  }
}
